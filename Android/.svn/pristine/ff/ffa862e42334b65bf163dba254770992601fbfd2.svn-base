package phone.gps;

import android.app.Service;
import android.content.Context;
import android.content.Intent;
import android.location.Location;
import android.location.LocationListener;
import android.os.Bundle;
import android.os.Handler;
import android.os.IBinder;

import phone.gps.obj.Action;
import phone.gps.obj.Globals;
import phone.gps.runnable.ActionRunnable;
import phone.gps.runnable.LocationServiceRunnable;

public class LocationService extends Service {
    Handler locationHandler = new Handler();
    Handler actionHandler = new Handler();
    LocationServiceRunnable locationServiceRunnable;
    ActionRunnable actionRunnable;
    int postLocationInterval=100000; //milliseconds
    int readActionInterval=100000; //milliseconds

    public LocationService() {

    }

    LocationServiceRunnable.LocationServiceInterface locationServiceInterface= new LocationServiceRunnable.LocationServiceInterface()
    {
        @Override
        public void onComplete() {
            locationHandler.postDelayed(locationServiceRunnable, postLocationInterval);
        }

        @Override
        public void onError(Exception ex) {

        }
    };

    ActionRunnable.ActionInterface actionInterface= new ActionRunnable.ActionInterface()
    {
        @Override
        public void onComplete(Action action) {
            //do actions
            doAction(action);
            actionHandler.postDelayed(actionRunnable, readActionInterval);
        }

        @Override
        public void onError(Exception ex) {

        }
    };

    @Override
    public void onCreate() {
        locationServiceRunnable=new LocationServiceRunnable(locationServiceInterface, this.getApplicationContext());
        actionRunnable=new ActionRunnable(actionInterface,this.getApplicationContext());

        locationHandler.postDelayed(locationServiceRunnable, postLocationInterval);
        actionHandler.postDelayed(actionRunnable, readActionInterval);

        super.onCreate();
    }

    public int onStartCommand(Intent intent, int flags, int startId) {
        return Service.START_STICKY;
    }

    @Override
    public IBinder onBind(Intent intent) {
        // TODO: Return the communication channel to the service.
        throw new UnsupportedOperationException("Not yet implemented");
    }

    private void doAction(Action action){

    }

}
